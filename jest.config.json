{
  "clearMocks": true,
  "collectCoverageFrom": [
    "lib/**/{!(index),}.ts"
  ],
  "coverageDirectory": "coverage",
  "coveragePathIgnorePatterns": [
    "<rootDir>/node_modules"
  ],
  "coverageReporters": [
    "html"
  ],
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  },
  "resetMocks": true,
  "restoreMocks": true,
  "roots": [
    "<rootDir>/lib",
    "<rootDir>/test"
  ],
  "setupFiles": [
    "<rootDir>/test/setup/jsdom.js",
    "<rootDir>/test/setup/fakeHttpServer.js"
  ],
  "testEnvironment": "jsdom",
  "testMatch": [
    "**/?(*.)+(test).+(ts|js)"
  ],
  "verbose": true
}
