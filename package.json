{
  "name": "sn-components-api",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/sn-extensions/components-api.git"
  },
  "main": "dist/dist.js",
  "types": "dist/@types",
  "scripts": {
    "build-docs": "typedoc",
    "build-types": "tsc",
    "bundle": "yon run lint-fix && webpack --config webpack.prod.js && yon run build-types",
    "coverage": "yon test --coverage --silent",
    "lint": "eslint",
    "lint-fix": "yon run lint --fix",
    "start": "webpack serve -w --config webpack.dev.js",
    "test": "jest"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/{!(index),}.ts"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "coverageReporters": [
      "html"
    ],
    "preset": "ts-jest",
    "resetMocks": true,
    "roots": [
      "<rootDir>/lib",
      "<rootDir>/test"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)+(test).+(ts|tsx|js)"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "verbose": true
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "babel-cli": "^6.26.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.1.0",
    "eslint": "^7.13.0",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.6.3",
    "snjs": "github:standardnotes/snjs#9e212add83688f65267c9300d7b9d2b1e5772a27",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.9",
    "tslint": "^6.1.3",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.3.0",
    "yarn-or-npm": "^3.0.1"
  }
}
