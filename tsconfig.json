{
  "include": ["lib/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist/@types",
    "emitDeclarationOnly": true,
    "newLine": "lf",
    "outDir": "./dist",
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}
